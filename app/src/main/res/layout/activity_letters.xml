<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".letters"
    android:background="@drawable/letters_background">

    <Button
        android:id="@+id/letter_a"
        android:layout_width="90dp"
        android:layout_height="94dp"
        android:layout_marginEnd="288dp"
        android:background="@drawable/letter_a"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.171" />

    <Button
        android:id="@+id/letter_b"
        android:layout_width="108dp"
        android:layout_height="89dp"
        android:layout_marginEnd="144dp"
        android:background="@drawable/letter_b"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.169" />

    <Button
        android:id="@+id/letter_c"
        android:layout_width="92dp"
        android:layout_height="90dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/letter_c"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.168" />

    <TextView
        android:id="@+id/consigne"
        android:layout_width="365dp"
        android:layout_height="0dp"
        android:layout_marginBottom="672dp"
        android:fontFamily="cursive"
        android:text="@string/consigne"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/letter_d"
        android:layout_width="93dp"
        android:layout_height="91dp"
        android:layout_marginEnd="284dp"
        android:background="@drawable/letter_d"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <Button
        android:id="@+id/letter_e"
        android:layout_width="106dp"
        android:layout_height="88dp"
        android:layout_marginEnd="144dp"
        android:background="@drawable/letter_e"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.408" />

    <Button
        android:id="@+id/letter_f"
        android:layout_width="97dp"
        android:layout_height="83dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/letter_f"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.407" />

</androidx.constraintlayout.widget.ConstraintLayout>